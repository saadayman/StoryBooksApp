<h3>Update Story</h3>
{{#if story}}
<div class="row">
  <form action="/stories/edit/{{story._id}}" method="POST" class="col s12">
    <input type="hidden" name="_method" value="PUT">
    <div class="row">
      <div class="input-field col s12">
        <label for="title">Title</label>
        <input
          type="text"
          placeholder="Title..."
          name="title"
          class="validate"
          value="{{story.title}}"
        />

      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <select id="status" name="status">
          <option value="{{story.status}}" disabled selected>{{story.status}}</option>
          <option value="public">Public</option>
          <option value="private">Private</option>
        </select>
        <label>Status</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <h5>Tell Us Your Story:</h5>
        <textarea name="body" id="body">{{story.body}}</textarea>
      </div>

    </div>
    <div class="row">
      <input type="submit" value="Save" class="btn" />
      <a href="/dashboard" class="btn orange">Cancel</a>
    </div>

  </form>

</div>
{{/if}}